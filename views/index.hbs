   <div class="row banner-header">
      <div class="medium-6 columns">
         
               <div class="icon-bar">
                  <a><i class="fi-heart heart-shadow-style"></i></a>
                  <cite>Candy </cite>
                  <span class="font-light">Deals</span>
               </div>
           
      </div>
      <div class="medium-6 columns">
         
            <ul class="inline-list">
               <li><a href="#">login</a></li>
               <li><a href="#">sign up</a></li>
               <li class="pad"><a href="#" class="button expand shadow-style small-font"><i class="fi-like"></i><span>Like US</span></a></li>
            </ul>
         
      </div>
   </div>
   <div class="client-controller row" ng-controller="dealSearchCtrl">
      <div class="row center-bg">
         <div class="medium-10 search-title">
            <h1 class="subheader">Best Deals Engine In Singapore</h1>
            <h4 class="subheader">Life worth to be candy , Let's explore what are the best deals in the city</h4>
         </div>
         <div class="row search-bar">
            <div class="medium-6 medium-offset-3 columns">
               <div class="row collapse prefix-round">
                  <div class="small-1 columns"><a href="" class="button prefix"><i class="fi-magnifying-glass"></i></a></div>
                  <div class="small-2 columns search">
                     <select id="searchCategorySelect" ng-options="category.code as category.name for category in categoryFilters" 
                        ng-model="selectedCategoryFilterCode" ></select>
                  </div>
                  <div class="small-7 columns">
                     <input id="searchTxt" type="text" placeholder="I am looking for">
                  </div>
                  <div class="small-2 columns"><a id="goBtn" ng-click="searchDeal()" href="#" class="button success postfix">GO</a></div>
               </div>
            </div>
         </div>
      </div>
      <div class="row search-result-pane animate-if" id="searchResultPane" ng-if="currentItem">
         <div class="row search-result-pane-header">
            <div class="medium-4 columns search-result-pane-header-title"><span class="round label">Today's hottest</span></div>
            <div class="medium-4 columns search-result-pane-header-nav"><a ng-click="prev()"><i class="fi-arrow-left"></i></a>
               <a ng-click="next()"><i class="fi-arrow-right"></i></a>
            </div>
         </div>
         <div class="row search-result-pane-box" ng-model="currentItem">
            <div class="medium-4 columns"><a ng-href="{[currentItem.dealLink]}"> <img ng-src="{[currentItem.largeImage]}" alt="" /></a> <span class="highlight">DEAL</span></div>
            <div class="medium-8 columns item-panel panel callout">
               <div class="title" ng-bind="currentItem.title"></div>
               <div class="price" ng-bind="(currentItem.price | currency )"></div>
               <div class="validate-time" ng-bind=" 'Expire at : ' + (currentItem.endAt | date: 'yyyy-MMMM-dd' )"> </div>
               <div class="desc" ng-bind="currentItem.finePrint"></div>
               <div>
                  <div class="button-group" data-grouptype="OR">
                     <a ng-href="{[currentItem.buyLink]}" class="small button primary radius">Buy it now</a>
                     <a ng-href="{[currentItem.dealLink]}" class="small button success radius">Learn More</a>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
