<div class="row center-bg">

	<div class="medium-10 search-title">
		<h1 class="subheader">Best Deals Engine In Singapore</h1>
		<h4 class="subheader">Life worth to be candy , Let's explore what are the best deals in the city</h4>
	</div>



	<div class="row search-bar">
		<div class="large-6 columns">
			<div class="row collapse prefix-round">
				<div class="small-1 columns"><a href="" class="button prefix"><i class="fi-magnifying-glass"></i></a></div>
				<div class="small-2 columns search">
					<select id="searchCategorySelect">
						<option value="f">FOOD</option>
						<option value="s">SHOPPING</option>
						<option value="c">CREDIT CARD</option>
					</select>
				</div>
				<div class="small-7 columns">
					<input id="searchTxt" type="text" placeholder="I am looking for">
					</div>
					<div class="small-2 columns"><a id="goBtn" href="#" class="button success postfix">GO</a></div>
				</div>
			</div>
		</div>

	</div>


	<div class="row search-result-pane" id="searchResultPane">

	</div>

	<script id="search-item-source" type="text/x-handlebars-template">

		<ul class="small-block-grid-1 medium-block-grid-1 large-block-grid-1">
			\{{#each items}}
			<li>
				<div class="row">
					<div class="medium-4 columns"><a href="\{{dealLink}}"> <img src="\{{largeImage}}" alt="" /></a> <span class="highlight">DEAL</span></div>

					<div class="medium-8 columns item-panel panel callout"> 
						<div class="title">\{{title}}</div>
						<div class="price">$\{{price}}</div>
						<div class="validate-time">Valid till \{{endAt}}.</div>
						<div class="desc">\{{finePrint}}</div>
						<div>
								<div class="button-group" data-grouptype="OR">
									<a href="\{{buyLink}}" class="small button primary radius">Buy it now</a>
									<a href="\{{dealLink}}" class="small button success radius">Learn More</a>
								</div>
							</div>
						
					</div>
				</div>
			</div>
		</li>
		\{{/each}}
	</ul>

</script>
